<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="300dp" android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/ripple_effect">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/eateryImage"
            android:layout_column="33"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:src="@drawable/placeholder_restaurant"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RatingBar
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:progressTint="#ca1515"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:layout_weight="0.5"
            android:layout_gravity="left"
            android:layout_alignBottom="@+id/eateryImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="1"
            android:height="40sp"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distanceTxt"
            android:layout_weight="1"
            android:layout_gravity="bottom|right"
            android:layout_column="25"
            android:gravity="right"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="distance"
            android:layout_below="@+id/id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>


</RelativeLayout>